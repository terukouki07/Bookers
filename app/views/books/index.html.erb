<h1>Books</h1>
<table>
    <thead>
        <th>Title</th>
        <th>Body</th>
    </thead>
    <% @books.each do |book| %>
    <tbody>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td>
                <%= link_to "Show", book_path(book.id) %>
            </td>
            <td>
                <%= link_to "Edit", edit_book_path(book.id) %>
            </td>
            <td>
                <%= link_to "Destory", "data-confirm" => "Are you sure?" %>
            </td>
        </tr>
    </tbody>
    <% end %>
</table>


<h2>New book</h2>

<%= form_with model: @book, url: books_path, method: :post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>