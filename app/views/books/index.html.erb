<h1>Books</h1>
<table>
    <thead>
        <th>Title</th>
        <th>Body</th>
    </thead>
    <% @books.each do |book| %>
    <tbody>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td>
                <%= link_to "Show", book_path(book.id) %>
            </td>
            <td>
                <%= link_to "Edit", edit_book_path(book.id) %>
            </td>
            <td>
                <%= link_to "Destory",book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
            </td>
        </tr>
    </tbody>
    <% end %>
</table>


<h2>New book</h2>

<%= form_with model: @book, url: books_path, method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>body</p>
  <%= f.text_area :body %>

  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>