<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorsが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:@book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <div> <%= f.submit "Update Book" %> </div>

<% end %>
<!--showへのリンク-->
<%= link_to "Show", book_path(@book.id) %>

<!--backのリンク-->
<%= link_to "Back", books_path %>